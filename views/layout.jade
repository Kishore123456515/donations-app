doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='/') Donations App
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/causes') Causes
          ul.navbar-nav
            if currentUser
              if currentUser.userType === 'ngo'
                li.nav-item
                  a.nav-link(href='/causes/create') Create Cause
              li.nav-item
                a.nav-link(href='/donations') My Donations
              li.nav-item
                a.nav-link(href='/auth/logout') Logout
            else
              li.nav-item
                a.nav-link(href='/auth/register') Register
              li.nav-item
                a.nav-link(href='/auth/login') Login

    .container.mt-4
      if error
        .alert.alert-danger= error
      if success
        .alert.alert-success= success
      block content

    footer.footer.mt-5.py-3.bg-light
      .container
        span.text-muted Â© 2023 Donations App

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')