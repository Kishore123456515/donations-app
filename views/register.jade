extends layout

block content
  .row.justify-content-center
    .col-md-6
      .card
        .card-header
          h4 Register
        .card-body
          form(method='POST', action='/auth/register')
            .form-group.mb-3
              label(for='name') Name
              input#name.form-control(type='text', name='name', required)
            .form-group.mb-3
              label(for='email') Email
              input#email.form-control(type='email', name='email', required)
            .form-group.mb-3
              label(for='password') Password
              input#password.form-control(type='password', name='password', required)
            .form-group.mb-3
              label I am registering as:
              .form-check
                input#donor.form-check-input(type='radio', name='userType', value='donor', checked)
                label.form-check-label(for='donor') Donor
              .form-check
                input#ngo.form-check-input(type='radio', name='userType', value='ngo')
                label.form-check-label(for='ngo') NGO
            button.btn.btn-primary.btn-block(type='submit') Register
          p.mt-3
            | Already have an account? 
            a(href='/auth/login') Login here